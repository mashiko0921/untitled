<h2>返信一覧</h2>
<table>
  <tr>
    <td>
      <div class="box">
        <div>
          --返信先--
        </div>
        <% if @recruitment.re_id == '募集'%>
          <div><%= @recruitment.title %></div>
        <% end %>
        <span><%= @recruitment.created_at %></span>
        <span><%= link_to account_show_path(@recruitment.account.acc_id) do %>
              <%= @recruitment.account.name %>
            <% end %>
         </span>
        <div><%= @recruitment.detail %></div>
      </div>
    </td>
  </tr>

  <tr>
    <td>
      <div style="height:60vh; overflow-y:scroll;">
        <table>
          <tr>
            <td>
              <div id="add_comments">

                <%= render partial: "comment", collection: @comments %>

              </div>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>

  <tr>
    <td>
      <div id="request_add_comments">
        <%= button_to "さらに読み込む", comments_add_path(params[:recruitment_id], @comments.size.to_s), method: :get, data: { disable_with: "処理中..." }, remote: true %>
      </div>
    </td>
  </tr>

  <tr>
    <td>
      <%= render 'comments/new', comment: @comment %>
    </td>
  </tr>

</table>
