<p id="notice"><%= notice %></p>

<h1>ファイル</h1>

<table>
  <thead>
    <tr>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% recruitments.each do |recruitment| %>
      <tr>
        <td><%= recruitment.name %></td>
        <td><%= link_to '見る', recruitment %></td>
        <td><%= link_to '編集', edit_recruitment_path(recruitment) %></td>
        <td><%= link_to '削除', recruitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ファイルをアップロードする', new_recruitment_path %>
