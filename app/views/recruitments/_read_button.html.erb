<div >
  <% if last_comment.nil? %>
    <% if offset_time.nil? or offset_time == '0000-01-01 00:00:00' %>
      <!-- 返信が無い場合、もっと読み込むボタンは無し -->
      <%= button_to "更新", results_add_path(recruitment_id, '0000-01-01 00:00:00'), method: :get,
                    data: { disable_with: "処理中..." }, remote: true , class: "read_button"%>
    <% else %>
      <!-- 追加の返信がない場合-->
      <%= button_to "もっと読み込む", results_add_path(recruitment_id, offset_time), method: :get,
                    data: { disable_with: "処理中..." }, remote: true , class: "read_button"%>
    <% end %>
  <% else %>
    <%= button_to "もっと読み込む", results_add_path(recruitment_id, last_comment.updated_at.to_s), method: :get,
                  data: { disable_with: "処理中..." }, remote: true , class: "read_button"%>
  <% end %>
</div>
